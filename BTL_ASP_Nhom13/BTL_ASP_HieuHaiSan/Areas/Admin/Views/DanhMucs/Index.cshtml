@model IEnumerable<BTL_ASP_HieuHaiSan.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh mục sản phẩm</h2>
<br />

<p>
    @Html.ActionLink("Thêm danh mục mới", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_DanhMuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenDanhMuc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_DanhMuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenDanhMuc)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID_DanhMuc }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID_DanhMuc })
        </td>
    </tr>
}

</table>
