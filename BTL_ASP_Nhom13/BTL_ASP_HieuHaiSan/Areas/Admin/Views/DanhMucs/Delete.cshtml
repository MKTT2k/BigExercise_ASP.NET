@model BTL_ASP_HieuHaiSan.Models.DanhMuc

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa danh mục</h2>
<br />
<h3>Bạn có chắc chắn muốn xóa danh mục này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ID_DanhMuc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID_DanhMuc)
        </dd>

    </dl>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenDanhMuc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenDanhMuc)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center" >
            <input type="submit" value="Đồng ý" class="btn btn-default" />
        </div>
    }
</div>
<br />
<div>
    @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-info" })
</div>

@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}