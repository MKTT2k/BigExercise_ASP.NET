@model BTL_ASP_HieuHaiSan.Models.TinTuc_VaoBep

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h3>Bạn có chắc chắn xóa?</h3>
<br />
<div>

    <dl class="dl-horizontal">
        <dt>
            Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TieuDe)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @{
                string img = "~/Assets/Client/datafiles/tintuc/" + Model.HinhAnh;
            }
            <img src="@Url.Content(img)" width="170" class="img-rounded" />
        </dd>

        <dt>
            Ngày tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayTao)
        </dd>

        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt>
            Trạng thái
        </dt>

        @if (Model.Status)
        {
            <dd>
                Tin tức
            </dd>
        }
        else
        {
            <dd>
                Vào bếp
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Display")
        </div>
    }
</div>