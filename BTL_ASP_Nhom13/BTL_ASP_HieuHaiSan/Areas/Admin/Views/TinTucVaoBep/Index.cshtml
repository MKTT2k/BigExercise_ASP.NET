@model IEnumerable<BTL_ASP_HieuHaiSan.Models.TinTuc_VaoBep>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</p>
<br />
<table class="table">
    <tr>
        <th style="text-align:center">
            Tiêu Đề
        </th>
        <th style="text-align:center">
            Hình Ảnh
        </th>
        <th style="text-align:center">
            Ngày tạo
        </th>

        <th style="text-align:center">
            Trạng thái
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="font-size:16px;color:black">
            <td style="width:30%">
                @Html.DisplayFor(modelItem => item.TieuDe)
            </td>
            <td style="text-align:center">
                @{
                    string imagePath = "~/Assets/Client/datafiles/tintuc/" + item.HinhAnh;
                }
                <img src="@Url.Content(imagePath)" width="180" class="img-thumbnail" />

            </td>

            <td style="text-align:center">
                @{
                    string s = item.NgayTao.ToString("dd/MM/yyyy");
                }
                @s
            </td>


            @if (item.Status)
            {
                <td style="text-align:center">
                    Tin tức
                </td>
            }
            else
            {
                <td style="text-align:center">
                    Vào bếp
                </td>
            }

            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_TinTuc }) |
                @Html.ActionLink("Xem", "Details", new { id = item.ID_TinTuc }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_TinTuc })
            </td>
        </tr>
    }

</table>