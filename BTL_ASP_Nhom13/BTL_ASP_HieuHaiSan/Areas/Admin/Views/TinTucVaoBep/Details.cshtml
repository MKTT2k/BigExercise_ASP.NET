@model BTL_ASP_HieuHaiSan.Models.TinTuc_VaoBep

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

<h3>Chi tiết Tin tức - Vào Bếp</h3>
<br />
<div>

    <dl class="dl-horizontal">
        <dt>
            Tiêu đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TieuDe)
        </dd>

        <dt>
            Hình ảnh:
        </dt>

        <dd>
            @{
                string img = "~/Assets/Client/datafiles/tintuc/" + Model.HinhAnh;
            }
            <img src="@Url.Content(img)" width="170" class="img-rounded" />
        </dd>

        <dt>
            Ngày tạo:
        </dt>

        <dd>
            @{
                string s = Model.NgayTao.ToString("dd/MM/yyyy");
            }
            @s
        </dd>

        <dt>
            Nội dung:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt>
            Trạng thái:
        </dt>
        @if (Model.Status)
        {
            <dd>
                Tin tức
            </dd>
        }
        else
        {
            <dd>
                Vào bếp
            </dd>
        }


    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID_TinTuc }) |
    @Html.ActionLink("Quay lại", "Display")
</p>