@model IEnumerable<BTL_ASP_HieuHaiSan.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách sản phẩm</h2>
<br />
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th style="text-align:center; width: 130px">
            @Html.DisplayNameFor(model => model.DanhMuc.TenDanhMuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.HinhAnh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaGoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaBan)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSanPham)
        </td>
        <td style="text-align:center">
            @{ 
                string ImagePath = "~/Assets/Client/datafiles/setone/" + item.HinhAnh;
            }
            <img src="@Url.Content(ImagePath)" width="150" class="img-thumbnail" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaGoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID_SanPham }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ID_SanPham }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID_SanPham })
        </td>
    </tr>
}

</table>
