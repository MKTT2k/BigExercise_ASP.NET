
@model PagedList.IPagedList<BTL_ASP_HieuHaiSan.Models.SanPham>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách sản phẩm</h2>
<br />
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th style="text-align:center; width: 130px">
            Tên danh mục
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th style="text-align:center">
            Hình ảnh
        </th>
        <th>
            Giá gốc
        </th>
        <th>
            Giá bán
        </th>
        <th style="text-align:center">
            Số lượng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td style="text-align:center">
                @{
                    string ImagePath = "~/Assets/Client/datafiles/setone/" + item.HinhAnh;
                }
                <img src="@Url.Content(ImagePath)" width="150" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaGoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_SanPham }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_SanPham }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_SanPham })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Display", new { page }))