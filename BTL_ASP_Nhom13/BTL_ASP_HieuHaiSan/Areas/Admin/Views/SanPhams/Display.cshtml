
@model PagedList.IPagedList<BTL_ASP_HieuHaiSan.Models.SanPham>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var color = "inherit";
}

<h2>Danh sách sản phẩm</h2>
<br />
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</p>
@using (Html.BeginForm())
{
<div style="width:500px; float:right;">
    <dl>
        <dt>Nhập tên sản phẩm</dt>
        <dd>
            @Html.TextBox("SearchTenSP", ViewBag.CurrentFilterTenSP as string)
        </dd>
    </dl>
    <dl>
        <dt>Nhập khoảng giá</dt>
        <dd>@Html.TextBox("SearchPrice1", ViewBag.CurrentFilterPrice1 as string) đến  @Html.TextBox("SearchPrice2", ViewBag.CurrentFilterPrice2 as string)</dd>
    </dl>
    <div class="text-center"><input type="submit" value="Tìm" class="btn btn-default" /></div>
</div>
}
<table class="table align-middle">
    <tr>
        <th style="text-align:center; width: 130px">
            @Html.ActionLink("Danh mục", "Display", new { sortOrder = ViewBag.SapTheoDM, currentFilterTenSP = ViewBag.CurrentFilterTenSP, currentFilterPrice1 = ViewBag.CurrentFilterPrice1, currentFilterPrice2 = ViewBag.CurrentFilterPrice2 })
        </th>
        <th>
            @Html.ActionLink("Tên sản phẩm", "Display", new { sortOrder = ViewBag.SapTheoDM, currentFilterTenSP = ViewBag.CurrentFilterTenSP, currentFilterPrice1 = ViewBag.CurrentFilterPrice1, currentFilterPrice2 = ViewBag.CurrentFilterPrice2 })
        </th>
        <th style="text-align:center">
            Hình ảnh
        </th>
        <th>
            Giá gốc
        </th>
        <th>
            @Html.ActionLink("Giá bán", "Display", new { sortOrder = ViewBag.SapTheoDM, currentFilterTenSP = ViewBag.CurrentFilterTenSP, currentFilterPrice1 = ViewBag.CurrentFilterPrice1, currentFilterPrice2 = ViewBag.CurrentFilterPrice2 })
        </th>
        <th style="text-align:center">
            Số lượng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.SoLuong < 5)
        {
            color = "lightcoral";
        }
        else
        {
            color = "inherit";
        }
        <tr style="color:@color">
            <td style="text-align:center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td style="text-align:center; vertical-align: middle">
                @{
                    string ImagePath = "~/Assets/Client/datafiles/setone/" + item.HinhAnh;
                }
                <img src="@Url.Content(ImagePath)" width="150" class="img-thumbnail" />
            </td>
            <td style="vertical-align: middle">
                @String.Format("{0:0,0}", @Html.DisplayFor(modelItem => item.GiaGoc))
            </td>
            <td style="vertical-align: middle">
                @String.Format("{0:0,0}", @Html.DisplayFor(modelItem => item.GiaBan))
            </td>
            <td style="text-align:center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td style="vertical-align: middle">
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_SanPham }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_SanPham }, new { @class = "btn btn-info" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_SanPham }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Display", new { page, sortOrder = ViewBag.CurrentSort, 
    currentFilterTenSP = ViewBag.CurrentFilterTenSP, currentFilterPrice1 = ViewBag.CurrentFilterPrice1, currentFilterPrice2 = ViewBag.CurrentFilterPrice2 }))
