                        <a href="@Url.Action("Details", "Home", new {id = item.ID_SanPham})">
                        <li><img alt="@item.TenSanPham" src="~/Assets/Client/datafiles/setone/@item.HinhAnh" class="lazy" width="250" height="250" /></li>
                        <h3>@item.TenSanPham</h3>
