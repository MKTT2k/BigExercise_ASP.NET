                        <ul>
                            <a href="https://hieuhaisan.com/tom-hum-hap-ruou-vang.html">
                            <li><img alt="Tôm hùm hấp rượu vang" src="~/Assets/Client/datafiles/setone/14656368918363_tom-hum-hap-ruou-vang-hhs-2.jpg" class="lazy" width="400" height="250" /></li>
                            <h3>Tôm hùm hấp rượu vang</h3>
                            </a>
                        </ul>
                        <ul>
                            <a href="https://hieuhaisan.com/tom-hum-rang-me.html">
                            <li><img alt="Tôm hùm rang me" src="~/Assets/Client/datafiles/setone/14656376158133_tom-hum-rang-me-hhs-1.jpg" class="lazy" width="400" height="250" /></li>
                            <h3>Tôm hùm rang me</h3>
                            </a>
                        </ul>
                        <ul>
                            <a href="https://hieuhaisan.com/tom-hum-sashimi.html">
                            <li><img alt="Tôm hùm sashimi" src="~/Assets/Client/datafiles/setone/14656326441203_tom-hum-sashimi-an-song-hhs.jpg" class="lazy" width="400" height="250" /></li>
                            <h3>Tôm hùm sashimi</h3>
                            </a>
                        </ul>
                    </div>
                    <script>
                        $('.marquee').marquee({
                            duration: 19000,
                            gap: 0,
                            delayBeforeStart: 0,
                            direction: 'up',
                            duplicated: true,
                            startVisible: true
                        });
                    </script>
                </div>
                <div class="hotrokhachhang_right">
                    <h2>HỖ TRỢ KHÁCH HÀNG</h2>
                    <div class="list-yahoo">
                        <ul>
                            Hotline:: 091 5555 437
                        </ul>
                    </div>
                </div>
                <div class="banner_right desktop">
                    <ul>
                        <li>
                            <a href="https://hieuhaisan.com/tom-hum-canada-song.html"><img src="~/Assets/Client/datafiles/banners/14736666535386_300-300-tom-hum-canada-2.png" class="lazy" width="180" height="316" /></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="clr"></div>
        </div>
    </div>
    <div class="clr"></div>
</div>
