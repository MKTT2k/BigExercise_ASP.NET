                        </li>
                        <li class="row_input phone">
                            <input onClick="this.select()" id="txt_nphone" name="txt_nphone" class="input {validate:{required:true,number:true, rangelength:[6,12]}}" type="text" value="Điện thoại / Điện thoại di động" onFocus="if (this.value == 'Điện thoại / Điện thoại di động'){this.value='';}"
                                   onBlur="if (this.value == '') {this.value='Điện thoại / Điện thoại di động';}" />
