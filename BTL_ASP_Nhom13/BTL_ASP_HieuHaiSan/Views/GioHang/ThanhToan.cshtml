        if (!filter.test(email.value)) {
            alert('Vui lòng nhập đúng định dạng email');
            email.focus;
            return false;
        }
    }
    function isNumber(n) {
        return !isNaN(parseFloat(n)) && isFinite(n);
    }
</script>


