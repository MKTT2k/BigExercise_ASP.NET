@using BTL_ASP_HieuHaiSan.Models;
@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

@if (Model == null || Model.Count == 0)
{
    <h1 style="color:#000;">Giỏ hàng trống!</h1>
}
